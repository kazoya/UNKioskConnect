{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "enum": ["user", "admin"],
          "description": "The role of the user in the system."
        }
      },
      "required": ["uid", "email"]
    },
    "event": {
        "title": "Event",
        "description": "Represents an event that can be booked.",
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "The name of the event."
            },
            "description": {
                "type": "string",
                "description": "A detailed description of the event."
            },
            "imageUrl": {
                "type": "string",
                "format": "uri",
                "description": "URL for the event's image."
            },
            "price": {
                "type": "number",
                "description": "The price to book the event."
            },
            "date": {
                "type": "string",
                "format": "date-time",
                "description": "The date and time of the event."
            }
        },
        "required": ["name", "description", "price", "date"]
    },
    "booking": {
        "title": "Booking",
        "description": "Represents a user's booking of an event.",
        "type": "object",
        "properties": {
            "userId": {
                "type": "string",
                "description": "The ID of the user who made the booking."
            },
            "eventId": {
                "type": "string",
                "description": "The ID of the booked event."
            },
            "bookingDate": {
                "type": "string",
                "format": "date-time",
                "description": "The date the booking was made."
            },
            "status": {
                "type": "string",
                "enum": ["confirmed", "pending", "cancelled"],
                "description": "The status of the booking."
            }
        },
        "required": ["userId", "eventId", "bookingDate", "status"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores public information about a user."
    },
    "/events/{eventId}": {
      "schema": {
        "$ref": "#/entities/event"
      },
      "description": "Stores all available events."
    },
    "/users/{userId}/bookings/{bookingId}": {
      "schema": {
        "$ref": "#/entities/booking"
      },
      "description": "Stores bookings for a specific user."
    }
  }
}
